<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- REQUIRED PERMISSION 1: Query ALL packages (App Permission Manager) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES" tools:ignore="QueryAllPackagesPermission" />

    <!-- REQUIRED PERMISSION 2: Usage Stats for Real-Time Monitoring -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        tools:targetApi="31">

        <!-- Register the AppPermissionsActivity -->
        <activity
            android:name="com.dpsg.cyberx.AppPermissionsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>

        <!-- Register the AppDetailActivity -->
        <activity
            android:name="com.dpsg.cyberx.AppDetailActivity"
            android:exported="false"
            android:parentActivityName=".AppPermissionsActivity"/>

        <!-- Register the RealTimeMonitorActivity (Starts Phase 4) -->
        <activity
            android:name="com.dpsg.cyberx.RealTimeMonitorActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>

        <!-- Register the UsageTimelineActivity -->
        <activity
            android:name="com.dpsg.cyberx.UsageTimelineActivity"
            android:exported="false"
            android:parentActivityName=".RealTimeMonitorActivity"/>

        <!-- Register the ReportsActivity (Phase 5) -->
        <activity
            android:name="com.dpsg.cyberx.ReportsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>

        <!-- Register the AlertsActivity (Phase 6) -->
        <activity
            android:name="com.dpsg.cyberx.AlertsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"/>

        <!-- MainActivity (Dashboard) - The Launcher -->
        <activity
            android:name="com.dpsg.cyberx.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>