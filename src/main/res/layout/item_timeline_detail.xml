<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/timeline_app_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="App Icon" />

        <!-- App Name & Times -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeline_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Chrome"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/timeline_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Duration: 5 min 30 sec"
                android:textSize="14sp"
                android:textColor="#F44336"/>

            <TextView
                android:id="@+id/timeline_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:07 AM to 10:10 AM"
                android:textSize="12sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>