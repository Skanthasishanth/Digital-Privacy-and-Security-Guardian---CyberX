<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- App Icon -->
        <ImageView
            android:id="@+id/process_app_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="App Icon" />

        <!-- App Name and Package Name -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/process_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Process Name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/process_package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="com.package.process"
                android:textSize="10sp"
                android:textColor="#999999"/>
        </LinearLayout>

        <!-- CPU Usage -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPU"
                android:textSize="10sp"
                android:textColor="#666666"/>
            <TextView
                android:id="@+id/process_cpu_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5 %"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF9800"/>
        </LinearLayout>

        <!-- Memory Usage -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory"
                android:textSize="10sp"
                android:textColor="#666666"/>
            <TextView
                android:id="@+id/process_memory_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 MB"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2196F3"/>
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>